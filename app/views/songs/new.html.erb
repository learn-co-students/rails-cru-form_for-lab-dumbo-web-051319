<h1>New Song Form</h1>

<%= form_for @song do |f| %>

  <label>Name:</label>
  <%= f.text_field :name %><br>

  <label>Artist:</label>
  <%= f.select :artist_id, @artist_selection, prompt: 'Select One' %><br>

  <label>Genre:</label>
  <%= f.select :genre_id, @genre_selection, prompt: 'Select One' %><br>


  <%= f.submit %>

<% end %>
