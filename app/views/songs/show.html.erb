<h1>My Song</h1>
<ul>
<%= form_for @song do %>
  <li>
    <p>My song name: <%= @song.name %></p>
  <li>
    <p>My genre name: <%= (link_to @song.genre.name, genre_path(@song.genre_id)) if @song.genre_id %></p>
  <li>
    <p>My artist name: <%= (link_to @song.artist.name, artist_path(@song.artist_id)) if @song.artist_id %></p>
  </li>
<% end %>
</ul>

<%= link_to "Artists", artists_path %> <%= link_to "Genres", genres_path %>
